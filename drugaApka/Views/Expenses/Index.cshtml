@model IEnumerable<drugaApka.Models.EXPENSES>
@{
    ViewBag.Title = "Wydatki";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<div class="container">
    <div class="row">
        <a class="btn btn-primary btn-lg" href="~/Expenses/SearchDetails">Szczegółowe wydatki</a><button class="btn btn-default btn-lg">Inny</button>
        <div class="col-lg-12"><font size="5"><p class="text-center"><strong>Wydatki</strong></p></font></div>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover table-bordered">
        <thead>
            <tr>
                <th>Miesiac</th>
                <th>Wynajem</th>
                <th>Czynsz</th>
                <th>Prąd</th>
                <th>Gaz</th>
                <th>Internet</th>
                <th>Dodatkowe</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    @for (int i = 0; i < 7; i++)
                {
                    switch (i)
                    {
                        case 0:
                                <th>@item.ExpensePerMonth</th>
                                break;
                            case 1:
                                <th>@item.RentalFee</th>
                                break;
                            case 2:
                                <th>@item.Rent</th>
                                break;
                            case 3:
                                <th>@item.CurrentBill</th>
                                break;
                            case 4:
                                <th>@item.GasBill</th>
                                break;
                            case 5:
                                <th>@item.InternetBill</th>
                                break;
                            case 6:
                                <th>@Html.ActionLink("CLICK", "ExtraExpenses", "Expenses", new { month = item.ExpensePerMonth},null)</th>
                                break;
                            default:
                                break;
                                    }
                                }
                </tr>
            }
        </tbody>
    </table>
</div>
</html>

