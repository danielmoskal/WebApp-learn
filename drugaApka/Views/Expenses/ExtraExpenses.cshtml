@model IEnumerable<drugaApka.Models.EXPENSES>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ExtraExpenses</title>
</head>
<body>

    <p><h2>Dodatkowe wydatki</h2></p>

    <div class="container">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Miesiąc</th>
                    <th>Nazwa</th>
                    <th>Wartość</th>
                    <th>Data zapłaty</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        @for (int i = 0; i < 4; i++)
                        {
                            switch (i)
                            {
                                case 0:
                                    <th>@item.ExpensePerMonth</th>
                                    break;
                                case 1:
                                    <td>@item.EXTRA_EXPENSES.Name</td>
                                    break;
                                case 2:
                                    <td>@String.Format("{0:c}", item.EXTRA_EXPENSES.Value)</td>
                                    break;
                                case 3:
                                    <th>@item.ExpenseDate.ToString("dd/MM/yyy")</th>
                                    break;
                                default:
                                    break;
                            }
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="container-fluid">
        <div class="row">
            @{ 
                var sum = Model.Where(p => p.EXTRA_EXPENSES != null).Sum(p => p.EXTRA_EXPENSES.Value);
             }
            <div class="col-lg-2 col-lg-offset-6"><pre><strong>Suma:  <font size="4">@sum</font> zl</strong></pre></div>
        </div>
    </div>


</body>
</html>
