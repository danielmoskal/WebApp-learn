@model IEnumerable<drugaApka.Models.EXTRA_EXPENSES>
@{
    ViewBag.Title = "Dodatkowe Wydatki";
}

<h2>Dodaj dodatkowy wydatek</h2>

<p><strong>@ViewBag.error</strong></p>

<div class="container">
    <form class="form-horizontal" role="form">
        <div class="form-group">
            <label for="name" class="col-sm-2 control-label">Nazwa</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="inputName" placeholder="Nazwa artykułu">
            </div>
        </div>

        <div class="form-group">
            <label for="value" class="col-sm-2 control-label">Wartość</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="inputValue" placeholder="Wartość artykułu">
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Wyślij</button>
            </div>
        </div>
    </form>
</div>


<p>Lista aktualnych dodatkowych wydatków w bazie:</p>
<table class="table table-bordered table-responsive table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nazwa</th>
            <th>Wartość</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                @for (int i = 0; i < 3; i++)
                {
                    switch (i)
                    {
                        case 0:
                            {
                                <td>@item.EXTRA_EXPENSES_ID</td>
                                break;
                            }
                        case 1:
                            {
                                <td>@item.Name</td>
                                break;
                            }
                        case 2:
                            {
                                <td>@item.Value</td>
                                break;
                            }
                        default:
                            break;
                    }
                }
            </tr>
        }
    </tbody>
</table>