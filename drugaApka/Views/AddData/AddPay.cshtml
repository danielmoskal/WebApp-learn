@model IEnumerable<drugaApka.Models.USERS>
@{ 
    ViewBag.Title = "Dodaj wpłatę";
}

<p><h2>Dodaj wpłate</h2></p>

    <p><strong>@ViewBag.error</strong></p>

    <div class="container">
        <form class="form-horizontal" role="form">

            <div class="form-group">
                <label for="user" class="col-sm-2 control-label">Użytkownik</label>
                <div class="col-sm-10">
                    <select class="form-control" name="user">
                        @foreach (var item in Model)
                        {
                            <option value="@item.USER_ID">@item.firstName  @item.lastName</option>
                        }
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label for="date" class="col-sm-2 control-label">Data wpłaty</label>
                <div class="col-sm-10">
                    <input type="date" class="form-control" name="inputDate">
                </div>
            </div>

            <div class="form-group">
                <label for="internet" class="col-sm-2 control-label">Kwota wpłaty</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="inputValue" placeholder="Kwota">
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default">Wyślij</button>
                </div>
            </div>
        </form>
    </div>








